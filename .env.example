SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_APP_TOKEN=

OPENAI_API_KEY=
OPENAI_MODEL_FAST=gpt-4o-mini
OPENAI_CONVERSATION_ID= # 任意。指定すると既存のconversationを使う

MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

ALLOWED_SLACK_USER_IDS=U123ABC,U456DEF
LOG_LEVEL=info

STACKCHAN_CMD_TOPIC=stackchan/cmd
STACKCHAN_ACK_TOPIC=stackchan/ack
STACKCHAN_STATE_TOPIC=stackchan/state

# Trello integration (optional; leave empty to disable)
TRELLO_KEY=
TRELLO_TOKEN=
TRELLO_BOARD_ID=
TRELLO_POLL_INTERVAL_MS=300000  # 5 minutes
TRELLO_DUE_SOON_MINUTES=120     # notify if due within this many minutes
TRELLO_NOTIFY_TOPIC=stackchan/trello
TRELLO_SAY_VIA_CMD=false        # trueでsayとしてSTACKCHAN_CMD_TOPICにも送る

# MQTT command retry
MQTT_COMMAND_MAX_ATTEMPTS=3
MQTT_COMMAND_BASE_DELAY_MS=1000
